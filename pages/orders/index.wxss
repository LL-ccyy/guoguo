.contianer{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  padding-bottom: 100rpx;
}

.van-tabs {
  width: 750rpx;
}

.card-box{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 95%;
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 30rpx;
  background-color: white;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 12rpx;
  margin-left: 12rpx;
  background-color: #fafafa;
  border-radius: 10px;
}

.goods-info-box{
  display: flex;
  flex-direction: column;

}

.goods-title{
  font-size: 25rpx;
  color:black;
  font-weight: bold;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 50px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.goods-sub-title{
  font-size: 20rpx;
  color:gray;
  font-weight: 300;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 20px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.prz-n-num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}

.tag{
  display: flex;
  flex-direction: row;
  justify-content: start;
}

.card-buttom-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx 10rpx 20rpx;
}

.btns-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.cancel-box{
  width: 700rpx;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 20rpx 30rpx 20rpx;
}

.cancel-box-headline{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
  font-weight: 500;
  color: gray;
}

.cancel-box-detail{
  width: 100%;
  margin-top: 50rpx;
  padding-bottom: 50rpx;
}

.cancel-button{
  position: absolute;
  width: 660rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  bottom: 50rpx;
}

.pay-box{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 60rpx;
}

.pay-buttom{
  padding-bottom: 60rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.codeindex-box{
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.codeindex {
  width: 100%;
  flex-direction: row;
  justify-content: center;
  padding-left: 15rpx;
}
 
.code_main {
  margin-top: 24rpx;
  font-size: 28rpx;
}

.input_box {
  text-align: center;
  margin-top: 80rpx;
}
