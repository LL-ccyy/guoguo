  flex-direction: column;
  border-radius: 25rpx;
  height: 50rpx;
  font-size: 25rpx;
  text-align: center;
  justify-content: center;
  align-content: center;
  border: 1px solid darkseagreen;
  min-width: 100rpx;
  padding: 0 25rpx 0 25rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
}

.car-modal-btn{
  padding: 10rpx 10rpx;
}

.gray-line {
  width: 60%;
  height: 60rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  background-color: #e0e9d8;
}

.car-modal-num{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.car-modal-buttom-btn-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.car-modal-button {
  width: 80%;
