/* 商品图片 */
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 100rpx;
} 

.star{
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 0;
}

.banner {
  width: 100%;
  height: 750rpx;
}

.banner-style1 {
  height: 750rpx;
}

.banner image {
  width: 100%;
  height: 750rpx;
}

.banner-style1 .slide-image {
  width: 100%;
  height: 750rpx;
  box-sizing: border-box;
}

/* 文字区域 */
.text-info {
  display: block;
  width: 100%;
  margin: 10rpx 30rpx 10rpx 30rpx;
  padding: 10rpx 20rpx 0;
}

/* 商品描述 */
.description {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 250rpx;
  padding: 20rpx 30rpx 20rpx 30rpx;
  border-radius: 30rpx;
  background-color: white;
  overflow: hidden;
}

.description text {
  display: block;
  font-size: medium;
}

/* 满减 */
.description .promotion {
  display: inline-block;
  text-align: center;
  width: 130rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 8rpx 0;
  margin-left: 20rpx;
  border-radius: 30rpx;
  font-weight: 600;
  font-size: xx-small !important;
  background-color: #fff1f0;
  color: red;
}

.description>text:first-child {
  display: inline;
  color: #53a35d;
  font-size: larger;
}

.description-btm-box{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.share-btn{
  padding-right: 0;
  margin-top: 30rpx;
  height: 50rpx;
  width: 50rpx;
  align-items: center;
}

