/* 购物车弹窗 */
.car-modal {
  position: relative;
  min-height: 800rpx;
  padding: 30rpx 30rpx 200rpx 30rpx;
  border-radius: 30rpx;
}

.avator-headline{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content :flex-start;
  padding-right: 50rpx ;
  padding-top: 50rpx;
}

.avator {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 30rpx;
  background-color: #f4f7cc;
}

.avator-img{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.avator-textbox{
  width: 500rpx;
  height: 160rpx;
  padding-left: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.avator-headline-text{
  font-size: 18px;
  width: 500rpx;
  color:black;
  font-weight: bold;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
	height: 46px;	
	overflow: hidden;	
	text-overflow: ellipsis;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical; 
}

.sortDetial-price-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.sort-detail-text{
  font-size: 15px;
}

.car-modal-price{
  font-size: 15px;
  color: #ff4040;
}

.car-modal-specification{
  padding-top: 50rpx;
  padding-bottom: 20rpx;
}

.text-green {
  display: block;
  font-size: medium;
  color: #6b9253;
}

.car-modal-btnBox{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
  padding-top: 30rpx;
}

.car-modal-btn-block{
  padding-top: 20rpx;
}

.unselected-btn{
