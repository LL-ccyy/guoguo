/* 评论 */
.comments {
  position: relative;
  width: 100%;
  padding: 20rpx 40rpx;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 30rpx;
}
.head0{
display: flex;
flex-direction: row;
width: 100%;
height: 60rpx;
}

.more{
  display: flex;
font-size: 55rpx;
}


.comments text {
  color: #8ab078;
  font-size: medium;
}

.comments>text:last-child {
  font-size: xx-small;
}

