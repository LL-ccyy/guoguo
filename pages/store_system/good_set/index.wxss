page {
  min-height: 100%;
  background-color: #f2f2f2;
}

.container {
  background-color: #f2f2f2;
  min-height: 100%;
  overflow-x: hidden;
  position: relative;
  width: 100%;
  align-items: stretch;
  padding-bottom: 200rpx;
}

.comments{
  padding-top: 2%;
  margin-left: 3%;
  height: 250rpx;
}


textarea{
  width: 100%;
  /* border-bottom: 2px solid #000000; */
  height: 90rpx;
}

.ahead{
  margin-left: 5%;
  margin-top: 25rpx;
  width: 90%;
  background-color: white;
  border-radius: 5%;
  height: 320rpx;
}

.iamgeRootAll {
   display: -webkit-flex;
  flex-direction: row;
  margin-left: 2%;
  width: 100%;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}


.imgItem {
  margin-left: 6px;
  margin-right: 6px;
  position: relative;
  width: 66px;
  height: 66px;
  background-color: rgb(245, 245, 245);
  border-radius: 10px;
  /* border: 1px solid gray; */

}

.img {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.DeleteImg {
  position: absolute;
  right: 0px;
  width: 16px;
  height: 16px;
  z-index: 50;
}

.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}

.imgItem text{
  font-size: 12px;
  display: flex;
  padding-left: 13%;
  color: rgb(192, 192, 192);
}
.tag{
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  margin-left: 5%;
  width: 90%;
  background-color: white;
}

.divLine{
  background: gray;
  width: 90%;
  margin-left: 5%;
  height: 3rpx;
 }

.title {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  justify-content: center;
}

.mid_price{
  margin-top: 30rpx;
  margin-left: 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.mid_price text{
  display: flex;
  align-items:center;
  justify-content:end;
  height: 85rpx;
}

.mid_num{
  margin-left: 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.mid_num van-cell-group{
  width: 90%;
}

.mid_price van-cell-group{
  width: 90%;
}

.mid_num text{
  display: flex;
  align-items:center;
  justify-content:end;
}

.chooseSize{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  width: 90%;
  margin-left: 5%;
}

.chooseSize van-cell{
  width: 80%;
}

.chooseSize van-switch{
  display: flex;
  align-items: center;
  justify-content: end;
}

.addSize{
  width: 90%;
  margin-left: 5%;
  background-color: white;
}

.checkbox{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.right_checkbox{
  margin-left: 30rpx;
  display: flex;
  padding-right: 0rpx;
  width: 40%;
}

.changeSize{
  padding-top: 70rpx;
  padding-bottom: 80rpx;
}

.size{
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 90%;
  margin-left: 5%;
  margin-top: 30rpx;
}

.size text{
  display: flex;
  align-items: center;
}

.size_headline{
  display: flex;
  flex-direction: row;
  height: 85rpx;
}

.size_name{
  width: 82%;
  padding-left: 5%;
}

.size_delete{
  display: flex;
  justify-content: end;
  color: #61C4A8;
}

.add_size{
  margin-top: 30rpx;
  width: 90%;
  margin-left: 5%;
  background-color: white;
}

.bott_price{
  margin-left: 5%;
  width: 90%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.bott_price van-cell-group{
  width: 90%;
}

.bott_price text{
  display: flex;
  align-items:center;
  justify-content:end;
  height: 85rpx;
}