page {
  height: 100%;
}

van-sidebar {
  position: fixed;
  left: 0;
  height: 100% !important;
}

.goods-show-container {
  position: relative;
  width: 590rpx;
  left: 80rpx;
}

.goods-box{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
}

.img-box{
  width: 100%;
  display: inline;
  justify-content: center;
}

.text-container {
  display: flex;
  flex-direction: column;
  height: 30rpx;
  margin-top: 20rpx;
  font-size: x-small;
}

.goods-title-text{
  font-size:24rpx;
	height: 65rpx;
	overflow: hidden;	
	text-overflow: ellipsis;
}