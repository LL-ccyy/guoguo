
/* pages/order-check/index.wxss */
page {
  min-height: 100%;
  background-color: #f2f2f2;
}

.custom-image{
  width: 100rpx;
  height: 100rpx;
}

.container {
  background-color: #f2f2f2;
  min-height: 100%;
  overflow-x: hidden;
  position: relative;
  width: 100%;
  align-items: stretch;
  padding-bottom: 250rpx;
}
.good-list{
  padding-top: 10px;
  width: 95%;
  border-radius: 30rpx;
  background-color: white;
  padding: 0 20rpx 20rpx 20rpx;
  align-items: stretch;
  margin: 10rpx 0;
}
.lines{
  display: flex;
  flex-direction: row;
  background-color: white;
}
.chooseicon{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.shopname{
  width: 100%;
}

.rev-n-num{
  align-content: right;
}

.img-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 12rpx;
  background-color: #fafafa;
  border-radius: 10px;
}

.goods-info-box{
  width: 350rpx;
  display: flex;
  flex-direction: column;

}

.goods-title{
  font-size: 25rpx;
  color:black;
  font-weight: bold;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
  height: 50px;	
  overflow: hidden;	
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}

.goods-sub-title{
  font-size: 20rpx;
  color:gray;
  font-weight: 300;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 20px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.prz-n-num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  padding-top: 10rpx;
}

.num-box{
  border: 1rpx solid #000000;
  color: #000000;
  font-size: 25rpx; 
  width: 50rpx;
  display: flex;
  justify-content: center;  
  border-radius:15%; 
}

.subtotal{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.others{
  padding-top: 10px;
  align-items: stretch;
}

.msg-text{
  color: black;
  font-weight: 500;
}

.pay-box{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 60rpx;
}

.pay-buttom{
  padding-bottom: 60rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.codeindex {
  width: 100%;
  padding: 0 64rpx;
}
 
.code_main {
margin-top: 24rpx;
font-size: 28rpx;
}

.input_box {
text-align: center;
margin-top: 80rpx;
}

.delect-box{
  height: 100%;
  width: 65px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin-left: 20rpx; */
}

.delect-btn{
  height: 30px;
  width: 30px;
  border-radius: 20px;
  background-color: #ff4040;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.submit-bar1{
  margin-bottom: 96rpx;
}
