page {
  min-height: 100%;
  background-color: #f2f2f2;
}

.van-tabs {
  width: 750rpx;
}

.contianer{
  background-color: #f2f2f2;
  min-height: 100%;
  overflow-x: hidden;
  position: relative;
  width: 100%;
  align-items: stretch;
  padding-bottom: 200rpx;
}


.good-list{
  width: 100%;
  padding-top: 10px;
  align-items: stretch;
}
.lines{
  display: flex;
  flex-direction: row;
  background-color: white;
}
.chooseicon{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.shopname{
  width: 100%;
}

.rev-n-num{
  align-content: right;
}

.img-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 12rpx;
  margin-left: 12rpx;
  background-color: #fafafa;
  border-radius: 10px;
}

.goods-info-box{
  display: flex;
  flex-direction: column;

}

.goods-title{
  font-size: 25rpx;
  color:black;
  font-weight: bold;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 50px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.goods-sub-title{
  font-size: 20rpx;
  color:gray;
  font-weight: 300;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 20px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.prz-n-num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  padding-top: 10rpx;
}

.sold{
  display: flex;
  font-size: 20rpx;
  color: gray;
  padding-top: 10rpx;
  flex-direction: row;
  width: 400rpx;
}

.bottom{
  display: flex;
  width: 100%;
  flex-direction: row;
}

.more{
  display: flex;
  margin-right: 0rpx;
  font-size: 30rpx;
  color: black;
}