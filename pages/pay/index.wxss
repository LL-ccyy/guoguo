page {
  width: 100%;
  padding: 0 30rpx;
  margin: 0 0 120rpx 0;
}

.container{
  width: 100%;
  padding-bottom: 200rpx;
}

/* 文字 */
text {
  display: block;
}

.text-green {
  font-size: 35rpx;
  font-weight: 520;
  margin: 50rpx 0 0 30rpx;
  color: #a8bb9b;
}

.text-red {
  color: red;
}

/* 地址 */
.address-card {
  width: 100%;
  margin: 30rpx 0;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-radius: 30rpx;
  background-color: white;
}

.rev-info-title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.location-icon-n-title{
  width: fit-content;
  display: flex;
  flex-direction: row;
}

.rev-n-num{
  width: 400rpx;
  height: 24px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  overflow: hidden;
}

.order-card-white {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin-bottom: 30rpx;
  border-radius: 30rpx;
  background-color: white;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 12rpx;
  margin-left: 12rpx;
  background-color: #fafafa;
  border-radius: 10px;
}

.goods-info-box{
  display: flex;
  flex-direction: column;

}

.goods-title{
  font-size: 25rpx;
  color:black;
  font-weight: bold;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 50px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.goods-sub-title{
  font-size: 20rpx;
  color:gray;
  font-weight: 300;
  text-align: left;
  word-break: break-all;
  display: -webkit-box; 
height: 20px;	
overflow: hidden;	
text-overflow: ellipsis;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; 
}

.prz-n-num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}

.tag{
  display: flex;
  flex-direction: row;
  justify-content: start;
}

.msg-text{
  color: black;
  font-weight: 500;
}

.subtotal{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}


.price-info text {
  font-size: medium;
}

.price-info .text-green { 
  float: none;
  margin: 0 0 20rpx 30rpx;
}

.price-line {
  display: flex;
  justify-content: space-between;
}

.sum {
  margin: 0 0 0 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f6f6f6;
  border-bottom: 1rpx solid #f6f6f6;
}

.footer {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  padding: 20rpx 30rpx;
  line-height: 100rpx;
  background-color: white;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.submit-button {
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: white;
}

.submit-order {
  margin-right: -20rpx;
  background-color: #fa0017;
}

.pay-box{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 60rpx;
}

.pay-buttom{
  padding-bottom: 60rpx;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.codeindex-box{
  width: 100%;
  flex-direction: row;
  justify-content: center;
}

.codeindex {
  width: 100%;
  flex-direction: row;
  justify-content: center;
  padding-left: 15rpx;
}
 
.code_main {
  margin-top: 24rpx;
  font-size: 28rpx;
}

.input_box {
  text-align: center;
  margin-top: 80rpx;
}
